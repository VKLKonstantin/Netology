<%- include('header'), {title:title} %>

    <div>
        <table>
            <tr>
                <th>title</th>
                <th>description</th>
                <th>authors</th>
                <th>favorite</th>
                <th>fileCover</th>
                <th>fileName</th>
                <th>fileBook</th>
            </tr>
            <tr>
                <form method="POST" style="position: relative">
                    <th><input placeholder="title" type="text" id="title" value=<%=book.title%> name="title" ></th>
                    <th><input placeholder="description" type="text" id="description" value=<%=book.description%> name="description"></th>
                    <th><input placeholder="authors" type="text" id="authors" value=<%=book.authors%> name="authors"></th>
                    <th><input placeholder="favorite" type="text" id="favorite" value=<%=book.favorite%> name="favorite"></th>
                    <th><input placeholder="fileCover" type="text" id="fileCover" value=<%=book.fileCover%> name="fileCover"></th>
                    <th><input placeholder="fileName" type="text" id="fileName" value=<%=book.fileName%> name="fileName"></th>
                    <th><input placeholder="fileBook" type="text" id="fileBook" value=<%=book.fileBook%> name="fileBook"></th>

                    <button type="submit" class="gradient-button">Сохранить</button>
                  
                  </form>
                <a href="/api/books/<%=book.id%>" class="back"> Назад</a>
            </tr>
        </table>
    </div>
    <%- include('end') %>